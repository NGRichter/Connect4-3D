package connected.game;

public class Player {
	
	private String name;
	private Colour colour;
	
	public Player(String name, Colour colour) {
		this.name = name;
		this.colour = colour;
	}
	
	public String getName() {
		return name;
	}
	
	public Colour getColour() {
		return colour;
	}
	
	public String toString() {
		return name + "(" + Colour.toString(colour) + ")";
	}
	
	
}
