package connected.game;

import java.util.ArrayList;
import java.util.List;

public enum Colour {
	BLACK("#000000"), WHITE MELON, RED, BLUE, GREEN, PURPLE, ORANGE, YELLOW, GOLD, PINK, TURQUOISE, SILVER, GRAY, AMBER;
	
	private String hex;
	
	private Colour(String hex) {
		this.hex = hex;
	}

	public static List<Colour> allColours() {
		List<Colour> colours = new ArrayList<Colour>();
		for (Colour c : Colour.values()) {
			colours.add(c);
		}
		return colours;
	}
	
	public String getHex() {
		return hex;
	}
}
	

